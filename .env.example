# mem0-mcp Configuration

# Required: Your mem0.ai API key
MEM0_API_KEY=your_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8080
MODE=full  # Options: basic, full

# Memory Settings
DEFAULT_USER_ID=cursor_mcp

# Feature Flags
ENABLE_ADVANCED_TOOLS=true
ENABLE_CUSTOM_INSTRUCTIONS=true
ENABLE_HEALTH_CHECK=true
ENABLE_CORS=true

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG=false

# Deployment (auto-detected)
# RENDER=true  # Set automatically on Render
# ENVIRONMENT=production  # Set for production deployments